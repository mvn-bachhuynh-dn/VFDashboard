---
import Layout from "../../layouts/Layout.astro";

const email = Astro.url.searchParams.get("email") || "your email";
---

<Layout title="Access Restricted | VFDashboard">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full text-center space-y-8 p-10 bg-white rounded-3xl shadow-xl border border-gray-100">
      <div class="flex flex-center justify-center">
        <div class="p-4 bg-red-50 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0 0v2m0-2h2m-2 0H10m-3.343-5.657L5.243 8.243m1.414 1.414l1.414 1.414m2.828-9.9l1.414 1.414M11 5v2m0 0v2m0-2h2m-2 0H10m4.343 5.657l2.121 2.121m-1.414-1.414l-1.414-1.414M19 12h-2m0 0h-2m2 0v2m0-2v-212 15v2m0 0v2m0-2h2m-2 0H10" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
          </svg>
        </div>
      </div>
      
      <div class="space-y-3">
        <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Access Restricted</h1>
        <p class="text-gray-500 text-lg">
          Sorry, your email <span class="font-semibold text-gray-800">{email}</span> is not on the authorized whitelist for this dashboard.
        </p>
      </div>

      <div class="pt-6">
        <a 
          href="/auth/google" 
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-blue-600 hover:bg-blue-700 transition-colors shadow-sm"
        >
          Try another account
        </a>
      </div>

      <div class="pt-4 text-sm text-gray-400">
        <p>If you believe this is an error, please contact the administrator.</p>
      </div>
    </div>
  </div>
</Layout>
